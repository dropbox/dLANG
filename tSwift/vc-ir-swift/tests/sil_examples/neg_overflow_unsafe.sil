// SIL test file: Negation as subtraction with overflow check
// Swift implements -x as 0 - x using ssub_with_overflow
// This can overflow when x = Int.min (because -Int.min > Int.max)

sil_stage canonical

import Builtin
import Swift

// Negation function: returns -x
// Overflow: -Int.min would exceed Int.max
sil hidden @neg : $@convention(thin) (Int) -> Int {
bb0(%0 : $Int):
  debug_value %0, let, name "x", argno 1
  %2 = struct_extract %0, #Int._value
  %3 = integer_literal $Builtin.Int64, 0
  %4 = integer_literal $Builtin.Int1, -1
  %5 = builtin "ssub_with_overflow_Int64"(%3, %2, %4) : $(Builtin.Int64, Builtin.Int1)
  %6 = tuple_extract %5, 0
  %7 = tuple_extract %5, 1
  cond_fail %7, "arithmetic overflow"
  %9 = struct $Int (%6)
  return %9
}
