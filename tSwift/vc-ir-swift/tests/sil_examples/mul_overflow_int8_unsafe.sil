// SIL test file: Int8 Multiplication with overflow check
// Tests that bitwidth-specific bounds (-128 to 127) are used

sil_stage canonical

import Builtin
import Swift

// Int8 mul function with overflow check
sil hidden @mul_int8 : $@convention(thin) (Int8, Int8) -> Int8 {
bb0(%0 : $Int8, %1 : $Int8):
  debug_value %0, let, name "a", argno 1
  debug_value %1, let, name "b", argno 2
  %4 = struct_extract %0, #Int8._value
  %5 = struct_extract %1, #Int8._value
  %6 = integer_literal $Builtin.Int1, -1
  %7 = builtin "smul_with_overflow_Int8"(%4, %5, %6) : $(Builtin.Int8, Builtin.Int1)
  %8 = tuple_extract %7, 0
  %9 = tuple_extract %7, 1
  cond_fail %9, "arithmetic overflow"
  %11 = struct $Int8 (%8)
  return %11
}
