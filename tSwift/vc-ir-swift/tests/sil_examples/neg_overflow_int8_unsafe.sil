// SIL test file: Int8 negation as subtraction with overflow check
// Swift implements -x as 0 - x using ssub_with_overflow
// This can overflow when x = Int8.min (because -Int8.min > Int8.max)
//
// Bounds: -128 to 127

sil_stage canonical

import Builtin
import Swift

// Negation function: returns -x
// Overflow: -(-128) = 128, which exceeds Int8.max (127)
sil hidden @neg_int8 : $@convention(thin) (Int8) -> Int8 {
bb0(%0 : $Int8):
  debug_value %0, let, name "x", argno 1
  %2 = struct_extract %0, #Int8._value
  %3 = integer_literal $Builtin.Int8, 0
  %4 = integer_literal $Builtin.Int1, -1
  %5 = builtin "ssub_with_overflow_Int8"(%3, %2, %4) : $(Builtin.Int8, Builtin.Int1)
  %6 = tuple_extract %5, 0
  %7 = tuple_extract %5, 1
  cond_fail %7, "arithmetic overflow"
  %9 = struct $Int8 (%6)
  return %9
}

