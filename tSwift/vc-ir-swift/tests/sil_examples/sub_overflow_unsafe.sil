// SIL test file: Subtraction with overflow check
// This demonstrates the overflow check that Swift generates for Int subtraction

sil_stage canonical

import Builtin
import Swift

// Simple sub function with overflow check
// Subtraction can overflow when:
// - a - b < INT_MIN (e.g., INT_MIN - 1)
// - a - b > INT_MAX (e.g., a = 0, b = INT_MIN -> 0 - INT_MIN = INT_MAX + 1)
sil hidden @sub : $@convention(thin) (Int, Int) -> Int {
bb0(%0 : $Int, %1 : $Int):
  debug_value %0, let, name "a", argno 1
  debug_value %1, let, name "b", argno 2
  %4 = struct_extract %0, #Int._value
  %5 = struct_extract %1, #Int._value
  %6 = integer_literal $Builtin.Int1, -1
  %7 = builtin "ssub_with_overflow_Int64"(%4, %5, %6) : $(Builtin.Int64, Builtin.Int1)
  %8 = tuple_extract %7, 0
  %9 = tuple_extract %7, 1
  cond_fail %9, "arithmetic overflow"
  %11 = struct $Int (%8)
  return %11
}
