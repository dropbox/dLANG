sil_stage canonical

import Builtin
import Swift
import SwiftShims

// Bounded addition: auto-VC should PASS
// The preconditions limit a and b to small positive values,
// so a + b cannot overflow Int64 bounds.

@_requires("a >= 0")
@_requires("a < 1000000")
@_requires("b >= 0")
@_requires("b < 1000000")
@_ensures("result >= 0")
func boundedAdd(_ a: Int, _ b: Int) -> Int

sil hidden @boundedAdd : $@convention(thin) (Int, Int) -> Int {
bb0(%0 : $Int, %1 : $Int):
  debug_value %0, let, name "a", argno 1
  debug_value %1, let, name "b", argno 2
  %4 = struct_extract %0, #Int._value
  %5 = struct_extract %1, #Int._value
  %6 = integer_literal $Builtin.Int1, -1
  %7 = builtin "sadd_with_overflow_Int64"(%4, %5, %6) : $(Builtin.Int64, Builtin.Int1)
  %8 = tuple_extract %7, 0
  %9 = tuple_extract %7, 1
  cond_fail %9, "arithmetic overflow"
  %11 = struct $Int (%8)
  return %11
}
