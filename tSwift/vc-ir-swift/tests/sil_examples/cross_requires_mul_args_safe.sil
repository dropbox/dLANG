import Builtin
import Swift

// requiresPositive: requires x > 0
// This precondition will be verified as a CallPrecondition VC at call sites.
@_requires("x > 0")
func requiresPositive(_ x: Int) -> Int

// callWithDoubled: calls requiresPositive(a*2), precondition a > 0
// This tests MULTIPLICATION ARGUMENT EXPRESSION substitution in precondition obligations.
//
// Analysis:
// - Callee precondition: x > 0
// - Call: requiresPositive(a*2) where a*2 is computed via SIL builtin smul
// - Substituted obligation: (a*2) > 0, i.e., a * 2 > 0
// - Caller precondition: a > 0
// - With hypothesis a > 0 => a * 2 > 0 (since 2 > 0 and a > 0, product is positive)
@_requires("a > 0")
func callWithDoubled(_ a: Int) -> Int

// requiresPositive implementation - identity function
sil hidden @$s17requires_mul_args16requiresPositiveyS2iF : $@convention(thin) (Int) -> Int {
bb0(%0 : $Int):
  debug_value %0, let, name "x", argno 1
  return %0
} // end sil function '$s17requires_mul_args16requiresPositiveyS2iF'

// callWithDoubled implementation - computes a*2, then calls requiresPositive(a*2)
sil hidden @$s17requires_mul_args15callWithDoubledyS2iF : $@convention(thin) (Int) -> Int {
bb0(%0 : $Int):
  debug_value %0, let, name "a", argno 1
  // Compute a*2
  %2 = struct_extract %0, #Int._value      // a._value
  %3 = integer_literal $Builtin.Int64, 2
  %4 = integer_literal $Builtin.Int1, 0
  %5 = builtin "smul_with_overflow_Int64"(%2, %3, %4) : $(Builtin.Int64, Builtin.Int1)
  %6 = tuple_extract %5, 0                  // raw result = a*2
  %7 = struct $Int (%6)                     // wrap as Int
  // Call requiresPositive(a*2)
  %8 = function_ref @$s17requires_mul_args16requiresPositiveyS2iF : $@convention(thin) (Int) -> Int
  %9 = apply %8(%7) : $@convention(thin) (Int) -> Int
  return %9
} // end sil function '$s17requires_mul_args15callWithDoubledyS2iF'
