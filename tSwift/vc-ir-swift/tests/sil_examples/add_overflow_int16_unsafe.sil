// SIL test file: Int16 Addition with overflow check
// Tests that bitwidth-specific bounds (-32768 to 32767) are used

sil_stage canonical

import Builtin
import Swift

// Int16 add function with overflow check
sil hidden @add_int16 : $@convention(thin) (Int16, Int16) -> Int16 {
bb0(%0 : $Int16, %1 : $Int16):
  debug_value %0, let, name "a", argno 1
  debug_value %1, let, name "b", argno 2
  %4 = struct_extract %0, #Int16._value
  %5 = struct_extract %1, #Int16._value
  %6 = integer_literal $Builtin.Int1, -1
  %7 = builtin "sadd_with_overflow_Int16"(%4, %5, %6) : $(Builtin.Int16, Builtin.Int1)
  %8 = tuple_extract %7, 0
  %9 = tuple_extract %7, 1
  cond_fail %9, "arithmetic overflow"
  %11 = struct $Int16 (%8)
  return %11
}
